{
    "hosting": [
    {
        "public": "_site",
        "target": "prod", 
        "ignore": [
            "firebase.json",    
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    {
        "public": "_site",
        "target": "staging",
        "ignore": [
            "firebase.json",    
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
  ]
}
